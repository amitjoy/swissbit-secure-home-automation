<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="570dp"
    android:orientation="vertical"
    android:background="@drawable/list_view"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/imgRaspberry"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="0dip"
        android:contentDescription="TODO"
        android:src="@drawable/raspberrypi" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="50dp"
        android:descendantFocusability="blocksDescendants">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:descendantFocusability="blocksDescendants">

            <TextView
                android:id="@+id/txtRaspberryDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/icon"
                android:editable="true"
                android:text="RPi ID: "
                android:inputType="textNoSuggestions"
                android:textSize="25sp"
                android:paddingLeft="25dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/txtRaspberryId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/icon"
                android:editable="true"
                android:inputType="textNoSuggestions"
                android:textSize="25sp"
                android:textColor="@color/white"/>
        </LinearLayout>



        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:descendantFocusability="blocksDescendants">

            <TextView
                android:id="@+id/txtRaspberryStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/icon"
                android:text="Status  "
                android:textSize="25sp"
                android:paddingLeft="25dp"
                android:textColor="@color/white"/>

            <ImageView
                android:id="@+id/imgStatus"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@id/txtRaspberryId"
                android:layout_marginTop="9dp"
                android:layout_marginRight="25dp"

                 />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>